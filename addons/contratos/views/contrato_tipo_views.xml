<odoo>
  <data>
    <record id="view_contrato_tipo_list" model="ir.ui.view">
      <field name="name">contratos.tipo.list</field>
      <field name="model">contratos.tipo</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="codigo"/>
          <field name="activo"/>
        </list>
      </field>
    </record>

    <record id="view_contrato_tipo_form" model="ir.ui.view">
      <field name="name">contratos.tipo.form</field>
      <field name="model">contratos.tipo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="codigo"/>
              <field name="activo"/>
              <field name="descripcion"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_contrato_tipos" model="ir.actions.act_window">
      <field name="name">Tipos de Contrato</field>
      <field name="res_model">contratos.tipo</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>